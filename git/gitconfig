[color]
	ui		= true
	branch		= auto
	diff		= auto
	status		= auto
[color "branch"]
	current		= blue reverse
	local		= green
	remote		= red
[color "diff"]
	meta		= yellow
	frag		= cyan
	old		= red
	new		= green
[color "status"]
	added		= green
	changed		= yellow
	untracked	= red
[alias]
# general
	st   	= status
	ci   	= commit
	co   	= checkout
	d    	= diff
	l    	= log
	p   	= push
	m    	= merge
	b    	= branch -a
	f    	= fetch
	r    	= remote
	t    	= tag
	ui   	= update-index
# Shortcuts
	lo   	= log --pretty=oneline
	lgs	= log --graph --stat
	clx  	= clean --force -dx
	po	= push origin
	pom	= push origin master
	mrom	= merge remotes/origin/master
